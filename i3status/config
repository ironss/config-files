# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = i3bar
    colors = true
    interval = 5
}

order += "disk /home"
order += "wireless wlo1"
order += "ethernet eno1"
order += "cpu_usage"
order += "load"
order += "battery 0"
order += "volume master"
order += "tztime utc"
order += "tztime local"


disk "/home" {
        format = "H:%free (%percentage_free)"
}

wireless wlo1 {
    format_up = "W:(%essid %quality) %ip"
    format_down = "W:down"
}

ethernet eno1 {
    # if you use %speed, i3status requires root privileges
    format_up = "E:%ip"
    format_down = "E:down"
}

cpu_usage {
    format = "CPU:%usage"
}

battery 0 {
    format = "%status %percentage"
    format_down = "No battery"
    status_chr = "⚇ CHR"
    status_bat = "⚡ BAT"
    status_full = "☻ FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

volume master {
    format = "♪:%volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}

tztime utc {
    format = "%H:%Mz"
    timezone = "UTC"
}

