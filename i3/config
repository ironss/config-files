# --- Resize -----------------------------------------------------------------

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will grow the window’s height.
        # Pressing down will shrink the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left  resize shrink width 10 px or 10 ppt
        bindsym Down  resize shrink height 10 px or 10 ppt
        bindsym Up    resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# --- Status bar -------------------------------------------------------------
# See man i3status and ~/.config/i3status/config

bar {
        status_command i3status
#        mode hide
}


# --- Control i3 -------------------------------------------------------------

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Logging out. Confirm ---> ' -b 'Yes, logout' 'i3-msg exit'"

# bindsym $mod+x debuglog toggle


# -- Auto-start -------------------------------------------------------------
exec /usr/bin/gnome-settings-daemon
exec /usr/bin/gnome-sound-applet
exec /usr/bin/nm-applet
exec /usr/bin/dropbox start


# --- Window settings --------------------------------------------------------
# Window settings for Eclipse
for_window [title="Eclipse"] floating enable
for_window [class="Eclipse"] floating disable
assign [class="Eclipse" title="^.*"] 3
assign [class="Eclipse" ] 4

# Window settings for Thunderbird
assign [class="Thunderbird"] 1

# Window settings for rdesktop: Floating so that it has the size requested
for_window [class="rdesktop"] floating enable

# Window settings for OpenCPN
#assign [class="Opencpn"] 5
for_window [class="Opencpn" ] floating enable, border none
for_window [class="Opencpn" title=".*"] floating disable, border normal
for_window [class="Opencpn" title="ocpnToolbarDialog"] floating enable, border none
# for_window [class="Opencpn" title="OpenCPN .*" floating disable, border normal 

